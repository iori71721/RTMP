<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/test_rtmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test rtmp" />

            <Button
                android:id="@+id/test_gpuimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test_gpuimage ?" />

            <Button
                android:id="@+id/test_two_level_rtmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test_two_level_rtmp(fail)" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalFlipFilter"
                android:text="水平翻轉filter+亮度+亮度"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>